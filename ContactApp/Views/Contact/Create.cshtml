@using ContactApp.ViewModels

@model CreateContactVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add contact</h5>
                <form asp-controller="Contact" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span class="text-danger" asp-validation-for="Surname"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Number" class="form-label"></label>
                            <input asp-for="Number" class="form-control" />
                            <span class="text-danger" asp-validation-for="Number"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="PhotoUrlFile" type="file" class="form-control" />

                        </div>
                    </div>
                    <button type="submit" asp-action="Create" asp-controller="Contact" class="btn btn-primary">Save</button>

                </form>
            </div>
        </div>
    </div>
</div>
