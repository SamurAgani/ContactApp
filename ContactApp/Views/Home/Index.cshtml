@using ContactApp.Entities
@model List<Contact>

@{
    ViewData["Title"] = "Home Page";
    var count = 0;

}
<form asp-action="Index" asp-controller="Home" class="form-outline" id="search-form">
  <div class="form-outline" style="width:80%">
    <input type="search" class="form-control" id="search-text" placeholder="Search" name="searchText" />
  </div>
</form>
<hr />

@if (Model.Any())

{

    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")
        }
        <div class="col">
            <div class="card">
                <img style="width:100% ; height:350px" src="@item.PhotoUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Surname</p>
                    <h4 class="text-primary">@item.Number </h4>

                    <div>
                        <a asp-controller="Contact" asp-action="Update" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }

    }
}
